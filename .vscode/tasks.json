                "cwd": "${workspaceFolder}/server/src"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev"
            }
        },
        {
            "label": "Expo Client",
            "type": "shell",
            "command": "npx expo start",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev"
            }
