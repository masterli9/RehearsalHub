            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "API Server",
            "type": "shell",
            "command": "node index.js",
            "options": {
                "cwd": "${workspaceFolder}/server/src"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev"
            }
        },
        {
            "label": "Socket Server",
            "type": "shell",
            "command": "node socketServer.js",
